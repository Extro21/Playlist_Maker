<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="49dp"
        android:onClick="clickToolBar"
        app:navigationIcon="@drawable/ic_arrow_back"
        tools:ignore="UsingOnClickInXml">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>



        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:paddingStart="16dp"
            android:paddingEnd="6dp"
            android:layout_marginBottom="21dp"
            android:textSize="@dimen/size_text_setting"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start_setting_menu"
        android:paddingEnd="@dimen/padding_end_setting_menu"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_setting_menu"
            android:layout_marginBottom="@dimen/margin_bot_setting_menu"
            android:layout_weight="1"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_setting"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indent_image_setting"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_share_24"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start_setting_menu"
        android:paddingEnd="@dimen/padding_end_setting_menu"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_top_setting_menu"
            android:layout_marginBottom="@dimen/margin_bot_setting_menu"
            android:text="@string/write_support"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_setting"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indent_image_setting"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_support_agent_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_start_setting_menu"
        android:paddingEnd="@dimen/padding_end_setting_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_setting_menu"
            android:layout_marginBottom="@dimen/margin_bot_setting_menu"
            android:layout_weight="1"
            android:text="@string/user_agreement"
            android:textSize="@dimen/size_text_setting"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indent_image_setting"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_arrow_right"
            android:backgroundTint="@color/gray"/>

    </LinearLayout>

</LinearLayout>