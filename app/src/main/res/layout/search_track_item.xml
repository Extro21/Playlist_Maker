<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageMusicSearch"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        tools:src="@drawable/icon_track_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_text_regular"
            android:maxLines="1"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"
            tools:text="Название песни" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGroup"
                style="@style/trackSettingAttribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Название группы" />

            <ImageView
                style="@style/trackSettingAttribute"
                android:layout_width="@dimen/size_delimiter_track"
                android:layout_height="@dimen/size_delimiter_track"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_baseline_lens_24" />

            <TextView
                android:id="@+id/textTimeMusic"
                style="@style/trackSettingAttribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/trackSettingAttribute"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_arrow_right"

        />

</LinearLayout>