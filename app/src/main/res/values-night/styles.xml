<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="TextViewSetting">
        <item name="android:textSize">@dimen/size_text_setting</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="LinearLayoutSetting">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_start_setting_menu</item>
        <item name="android:paddingEnd">@dimen/padding_end_setting_menu</item>

    </style>

    <style name="toolBarTop">
        <item name="navigationIcon">@drawable/ic_baseline_arrow_white_24</item>
    </style>

    <style name="textMenuSearch">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tooBarText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edSearchStyle">
        <item name="android:textColorHint">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="imageSetting">
        <item name="tint">@color/white</item>
    </style>

    <style name="edClear">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="bgSearch">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="trackSettingAttribute">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>