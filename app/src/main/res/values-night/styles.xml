<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="TextViewSetting">
        <item name="android:textSize">@dimen/size_text_setting</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="LinearLayoutSetting">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_start_setting_menu</item>
        <item name="android:paddingEnd">@dimen/padding_end_setting_menu</item>

    </style>

    <style name="toolBarTop">
        <item name="navigationIcon">@drawable/ic_baseline_arrow_white_24</item>
    </style>

    <style name="textMenuSearch">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tooBarText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="imageSetting">
        <item name="tint">@color/white</item>
    </style>

</resources>