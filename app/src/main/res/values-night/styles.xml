<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ButtonMainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:layout_marginTop">@dimen/margin_main_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon_button_main</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius_button_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="MainWindow">
        <item name="background">?attr/colorOnPrimary</item>
    </style>
    
    <style name="TextViewSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_setting_menu</item>
        <item name="android:layout_marginBottom">@dimen/margin_bot_setting_menu</item>
        <item name="android:textSize">@dimen/size_text_setting</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="LinearLayoutSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_start_setting_menu</item>
        <item name="android:paddingEnd">@dimen/padding_end_setting_menu</item>
    </style>

</resources>