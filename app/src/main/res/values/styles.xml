<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon_button_main</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius_button_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>


    <style name="switchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:switchMinWidth">32dp</item>
    </style>

    <style name="MainWindow">
        <item name="background">?attr/colorOnPrimary</item>
    </style>

    <style name="TextViewSetting">
        <item name="android:textSize">@dimen/size_text_setting</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>


    <style name="LinearLayoutSetting">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/padding_start_setting_menu</item>
        <item name="android:paddingEnd">@dimen/padding_end_setting_menu</item>
    </style>

    <style name="imageSetting">
        <item name="tint">@color/gray</item>
    </style>


    <style name="toolBarTop">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="textMenuSearch">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="tooBarText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edSearchStyle">
        <item name="android:textColorHint">@color/gray</item>
        <item name="drawableTint">@color/gray</item>
        <item name="android:backgroundTint">@color/gray_search</item>
    </style>

    <style name="bgSearch">
        <item name="android:backgroundTint">@color/gray_search</item>
    </style>

    <style name="edClear">
        <item name="tint">@color/gray</item>
    </style>

    <style name="trackSettingAttribute">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="tint">@color/gray</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="mistakeImageNotInternet">
        <item name="android:src">@drawable/not_internet</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mistakeImageNotFound">
        <item name="android:src">@drawable/nothing_was_found</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="colorMenu">
        <item name="android:background">@color/white</item>
    </style>

    <style name="colorMenuTab">
        <item name="android:background">@color/gray_search</item>
    </style>


    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

</resources>